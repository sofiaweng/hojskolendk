---
import { Image } from 'astro:assets';
import Logo from "../assets/images/logo.svg";
---
<div class="z-50">
    <div x-data="{ showmenu: false }" class="w-full fixed z-50">
        <div id="navbar" class="p-4 flex flex-row justify-between">
            <div id="logo" class="self-center hover:scale-110 ease-linear duration-200 ">
                <a href="/">
                    <Image class="w-3xl" src={Logo} alt="logo ikon"></Image>
                </a>
            </div>
            <div class="w-3xl text-xl self-center hover:scale-110 ease-linear duration-200 text-center italic">
                <a href="/" class="font-display text-orange-500">
                    Tilmeld
                </a>
            </div>
            <!-- Burgermenu -->
            <div id="burgermenu" class="self-center  p-2 cursor-pointer" x-on:click="showmenu = !showmenu">
                <template x-if="!showmenu">
                    <!-- Burgerikon -->
                    <div>
                        <span class="block w-12 h-1 bg-orange-500 my-2 rounded-full"></span>
                        <span class="block w-12 h-1 bg-orange-500 my-2 rounded-full"></span>
                        <span class="block w-12 h-1 bg-orange-500 my-2 rounded-full"></span>
                    </div>
                </template>
                <template x-if="showmenu">
                    <!-- Traditionelt kryds -->
                    <div class="relative w-12 h-10 flex items-center justify-center">
                        <span class="absolute block w-full h-1 bg-orange-500 transform rotate-45 ease-in"></span>
                        <span class="absolute block w-full h-1 bg-orange-500 transform -rotate-45 ease-in"></span>
                    </div>
                </template>
            </div>
        </div>

        <nav id="mobilmenu" class=" flex flex-col content-center text-center items-center  text-orange-500 bg-white/75"
            x-show="showmenu" x-transition x-on:click.outside="showmenu = false">
            <ul class="flex flex-col gap-5  font-display text-2xl italic">
     
                <li class=" border-t pt-5"><a href="#hojskoleophold" class=" transition-all duration-200 ease-in-out">Højskoleophold</a></li>
                <li class="  "><a href="/" class=" transition-all duration-200 ease-in-out">
                    Sommerhøjskole</a></li>
                <li class=" "><a href="#contact" class="  transition-all duration-200 ease-in-out">Contact</a></li>
                <li class=" pb-5 "><a href="#faq" class="  transition-all duration-200 ease-in-out">FAQ</a></li>
            </ul>
          <span class="border-t border-solid border-orange-300 w-1/6 m-auto"> </span>

               <div class="flex flex-row self-center gap-5 pt-5 ">
                <a href="mailto:info@hojskolendk.dk" class=" hover:scale-110 duration-200 ease-linear"> info@hojskolendk.dk</a>
                <span>/</span>
            <a href="tel:+4570279007" class="pb-8 underline hover:scale-110  duration-200 ease-linear">+45 70 27 90 07</a>
       </div>  </nav>
    </div>
  
 